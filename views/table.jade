extends layout

block content
    h1 TwinShips

    hr

    h2 Login
    .formContainer
        form(action='/login', method='post')
            label(for='user') Brugernavn
            input#user(type='text', name='user', placeholder='Brugernavn...')
            label(for='pass') Kodeord
            input#pass(type='text', name='pass', placeholder='Kodeord...')
            input(type='submit', value='Log ind')

    hr

    h2 Skibsdata
    table
        thead
            tr
                th Navn
                th Hjemhavn
                th Kaldesignal
                th MMSI-nummer
                th Anvendelse
                th BRT/BT
                th LÃ¦ngde
                th Maks antal om bord
        tbody
            each ship in shipData
                tr
                    td #{ship.navn}
                    td #{ship.hjemhavn}
                    td #{ship.kaldesignal}
                    td #{ship.MMSI_nummer}
                    td #{ship.Anvendelse}
                    td #{ship.BRT_BT}
                    td #{ship.Laengde}
                    td #{ship.max_antal_om_bord}

    hr

    h2 Sensordata
    table
        thead
            tr
                th Tid
                th MMSI-nummer
                th Fart
                th Kurs
                th GPS Koordinater
                th Vindretning
                th Vindstyrke (m/s)
                th Temperatur (C)
                th Omdrejning for alle motorer (rotation/m)
        tbody
            each sensor in sensorData
                tr
                    td #{sensor.tid}
                    td #{sensor.MMSI_nummer}
                    td #{sensor.fart}
                    td #{sensor.kurs}
                    td #{sensor.gps_koordinater}
                    td #{sensor.vindretning}
                    td #{sensor['Vindstyrke_(m/s)']}
                    td #{sensor['Temperatur_(C)']}
                    td #{sensor['Omdrejning_(rotation/m)']}

